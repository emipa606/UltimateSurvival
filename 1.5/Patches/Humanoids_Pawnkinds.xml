<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/PawnKindDef[@ParentName="MercenaryBase"]/inventoryOptions</xpath>
    <value>
      <inventoryOptions>
        <skipChance>0.01</skipChance>
        <subOptionsChooseOne>
          <li>
            <thingDef>Powershard</thingDef>
            <countRange>
              <min>10</min>
              <max>30</max>
            </countRange>
          </li>
          <li>
            <thingDef>MedicineIndustrial</thingDef>
            <countRange>
              <min>1</min>
              <max>1</max>
            </countRange>
          </li>
        </subOptionsChooseOne>
      </inventoryOptions>
    </value>
  </Operation>
