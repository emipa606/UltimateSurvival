<Defs>
  <!--  HEAVY TURRET  -->
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_TurretHeavy</defName>
    <label>Heavy Turret Bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>5</damageAmountBase>
      <speed>80</speed>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="BaseWeaponTurret">
    <defName>Gun_TurretHeavy</defName>
    <label>Heavy Turret Gun</label>
    <graphicData>
      <texPath>Things/Building/Security/HeavyTurretGun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <description>Heavy Turret.</description>
    <soundInteract>Interact_Rifle</soundInteract>
    <generateCommonality>0</generateCommonality>
    <tradeability>None</tradeability>
    <statBases>
      <AccuracyTouch>0.95</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.7</AccuracyMedium>
      <AccuracyLong>0.4</AccuracyLong>
      <RangedWeapon_Cooldown>0.1</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>TurretGun</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_TurretHeavy</defaultProjectile>
        <warmupTime>0.5</warmupTime>
        <range>30</range>
        <ticksBetweenBurstShots>2</ticksBetweenBurstShots>
        <burstShotCount>1</burstShotCount>
        <soundCast>Shot_AssaultRifle</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>5</muzzleFlashScale>
      </li>
    </verbs>
  </ThingDef>
