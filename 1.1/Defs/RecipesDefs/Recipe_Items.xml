<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <RecipeDef>
    <defName>CreatePowercore</defName>
    <label>Craft Powercore</label>
    <description>Combine Powershards to create a Powercore.</description>
    <jobString>Crafting Powercore</jobString>
    <workAmount>8000</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_MakeStoneBlocks</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Powershard</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>150</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>75</count>
      </li>
    </ingredients>
    <products>
      <Powercore>1</Powercore>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Powershard</li>
        <li>Steel</li>
        <li>Plasteel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <skillRequirements>
      <Crafting>12</Crafting>
    </skillRequirements>
    <researchPrerequisite>PowercoreProduction</researchPrerequisite>
    <recipeUsers>
      <li>Powerbench</li>
    </recipeUsers>
  </RecipeDef>
