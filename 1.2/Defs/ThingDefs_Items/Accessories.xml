<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Accessory Makeable Base Class -->
  <ThingDef Name="USAccessoryBase" Abstract="True">
    <thingClass>Apparel</thingClass>
    <category>Item</category>
    <selectable>True</selectable>
    <pathCost>10</pathCost>
    <useHitPoints>True</useHitPoints>
    <graphicData>
      <onGroundRandomRotateAngle>30</onGroundRandomRotateAngle>
    </graphicData>
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>1</DeteriorationRate>
      <SellPriceFactor>0.5</SellPriceFactor>
      <Insulation_Cold>3</Insulation_Cold>
      <Mass>1</Mass>
      <Beauty>-3</Beauty>
    </statBases>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <apparel>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <comps>
      <li Class="CompProperties_Forbiddable" />
      <li>
        <compClass>CompColorable</compClass>
      </li>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>RGBA(0.6,0.6,0.6,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>RGBA(0.75,0.75,0.75,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>RGBA(0.9,0.9,0.9,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
  <ThingDef Name="USMakeableAccessoryBase" ParentName="USAccessoryBase" Abstract="True">
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Tailor</effectWorking>
      <soundWorking>Recipe_Tailor</soundWorking>
      <recipeUsers>
        <li>USWeaponArmorbench</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
    </recipeMaker>
  </ThingDef>
  <!-- BASIC GLOVES/BOOTS -->
  <ThingDef ParentName="USMakeableAccessoryBase">
    <defName>BasicGloves</defName>
    <label>Basic Gloves</label>
    <description>GLOVE DESCRIPTION</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Accessory/BasicGloves</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <recipeMaker>
      <researchPrerequisite>USArmors</researchPrerequisite>
    </recipeMaker>
    <costStuffCount>35</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <MarketValue>200</MarketValue>
      <WorkToMake>2000</WorkToMake>
      <ArmorRating_Blunt>0.05</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.05</ArmorRating_Sharp>
      <ArmorRating_Heat>0.05</ArmorRating_Heat>
      <Insulation_Cold>5</Insulation_Cold>
      <Insulation_Heat>5</Insulation_Heat>
    </statBases>
    <equippedStatOffsets>
      <WorkSpeedGlobal>0.1</WorkSpeedGlobal>
      <MeleeHitChance>0.1</MeleeHitChance>
      <ShootingAccuracyPawn>0.05</ShootingAccuracyPawn>
      <AimingDelayFactor>-0.05</AimingDelayFactor>
    </equippedStatOffsets>
    <thingCategories>
      <li>USHandwear</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Hands</li>
      </bodyPartGroups>
      <layers>
        <li>OnSkin</li>
      </layers>
    </apparel>
    <tradeTags>
      <li>USGoods</li>
    </tradeTags>
  </ThingDef>
